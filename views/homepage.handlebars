
<!-- Loop over each object in the products array -->
{{#each products as |product| }}
<div class="container">
  <div class="row mb-4 product">
    <div class="col-md-5">
      <h2>
        <a href="/product/{{product.id}}">{{product.name}}</a>
      </h2>
      <p>
        <span for="img" aria-label="money">ðŸ’²</span>
        <span class="dollar-amount">{{format_amount product.price}}</span>
      </p>
      <p>{{product.name}} : {{product.description}}</p>
      {{#if logged_in}}
      <button class="btn btn-default noPad" type="submit" value="Submit">Add To Cart</button>
      {{else}}
      <a href="/login">buy</a>
      {{/if}}
    </div>
    <div class="col-md-7">
      <p>
        <img width=200 height=200 src="/images/{{product.filename}}" alt="{{product.description}}">
      </p>
    </div>
  </div>
</div>
{{/each}}
