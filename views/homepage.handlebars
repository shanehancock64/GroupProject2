
<!-- Loop over each object in the products array -->
{{#each products as |product| }}
<div class="row mb-4 product">
  <div class="col-md-5">
    <h2>
      <a href="/product/{{product.id}}">{{product.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ðŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount product.price}}</span>
    </p>
    <p>{{product.name}} : {{product.description}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{<img src="/images/{{product.filename}}" alt="{{product.description}}">}}
    </p>
  </div>
</div>
{{/each}}
